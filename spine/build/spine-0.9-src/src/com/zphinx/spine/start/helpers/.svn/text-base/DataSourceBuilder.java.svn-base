package com.zphinx.spine.start.helpers;

import java.util.Map;

import javax.sql.DataSource;

/**
 * 
 * DataSourceBuilder is used to create dataSources, it contains a single method which 
 * allows it to use the specified properties to instantiate a dataSource instance.
 * @author David Ladapo
 * @version  $1.0
 * 
 * <p>Created: Apr 23, 2008 4:43:14 PM<br>
 * Copyright &copy;Zphinx Software Solutions</p>
 * 
 **/
public interface DataSourceBuilder {

    
    /**
     * Instantiate, initialize and return a DataSource
     * @param m A map containing the parameters needed to create the DataSource
     * @return The dataSource we have just created and initialized. 
     */
    public DataSource createDataSource(Map m);
}
